<body>
    <div class="container">
        <h1>404</h1>
        <p id="error-message">عذرًا، الصفحة التي تبحث عنها غير موجودة.</p>
        <p id="suggestions" style="font-size: 1.2rem; color: #ccc;"></p>
        <a href="index.html" class="home-button">العودة إلى الصفحة الرئيسية</a>
    </div>

    <script>
        // JavaScript هنا
        const availablePages = ["index.html", "admin.html", "rules.html", "youtubers.html", "guide.html"];
        const path = window.location.pathname.split('/').pop(); // الحصول على الصفحة المطلوبة مع الامتداد

        const errorMessage = document.getElementById('error-message');
        const suggestions = document.getElementById('suggestions');

        if (availablePages.includes(path)) {
            errorMessage.textContent = `عذرًا، الصفحة "${path}" غير متاحة حاليًا.`;
        } else {
            errorMessage.textContent = `عذرًا، الصفحة "${path}" غير موجودة.`;
        }

        // عرض الصفحات المتاحة
        suggestions.textContent = `الصفحات المتاحة: ${availablePages.join(', ')}.`;
    </script>
